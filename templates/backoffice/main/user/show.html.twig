{% extends 'backoffice/main/base.html.twig' %}

{% block title %}{{ user.mail }}{% endblock %}

{% block body %}
    <h1 class="mt-3 mx-3">{{ user.mail }}</h1>

    {#% include "backoffice/fragments/_flash_message.html.twig" %#}

    <table class="table table-hover">
        <tbody>
            <tr class="table-active">
                <th scope="col">Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr class="table-active">
                <th scope="col">Email</th>
                <td>{{ user.mail }}</td>
            </tr>
            <tr class="table-active">
                <th scope="col">Rôles</th>
                <td>{{ user.role.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_list') }}" class="btn btn-sm btn-outline-info mx-3">Retour à la liste</a>

